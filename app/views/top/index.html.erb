<div class="hero-unit base">
  <div>
    &nbsp;
  </div>

  <div class="well saijyoubu">
    <%= form_for @question_new, :html => { :multipart => true }  do |form| %>
      <%= render 'questions/form', form: form %>
    <% end %>
    <ul class="nav nav-tabs">
      <li class="active">
      <a href="#">
        Question
      </a>
      </li>
      <li class="">
      <a href="#">
        Answer
      </a>
      </li>
      <li class="">
      <a href="#">
        Unanswered
      </a>
      </li>
    </ul>           
    <ul>
      <% @question_all.each do |question| %>
        <div class="well">
          <div>
            <h3>	
              <li>
              	<% @user_name = get_user_name(question.que_use_id) %>
              	<%= question.id %>:<%= question.que_ent_kbn %>:<%= question.que_title %>:<%= question.que_content %>
              	:<%=  %>
              	<%= image_tag question.avatar.url %>
                <%= link_to(@user_name, @user_name) %>
              	<%= link_to '回答する。', question %>
              </li>
              <td>
		       <% if user_signed_in? and current_user.id == question.que_use_id %>
                	<%= link_to '質問を削除する。', question, method: :delete %>
                <% end %>
              </td>
			  <span><b>回答数:</b> <%= question.answers.count %></span>
            </h3>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
